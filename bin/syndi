#!/usr/bin/env ruby
# Copyright (c) 2013, Autumn Perrault, et al. All rights reserved.
# This free software is distributed under the FreeBSD license (see LICENSE).

require 'English'
require 'rbconfig'

# Forbid root.
if ENV.include? 'USER'
  if ENV['USER'] == 'root'
    puts 'It is forbidden to run Syndi as the root user!'
    exit 1
  end
end

# Import necessary libraries.
if File.exists? 'Gemfile.lock'
  require 'bundler'
  Bundler.setup :default
end
require 'slop'
require 'syndi'
require 'syndi/verbosity'

# Change to the Syndi directory.
Syndi.dir = File.join ENV['HOME'], '.syndi'
Syndi.celluloid_log

$VERBOSITY = 0

# Parse options.
Slop.parse(:banner => "Usage: #$PROGRAM_NAME [options]") do
  on :h, :help, "You're looking at it." do
    puts self
    exit 0
  end

  on :v, :version, 'Display version and exit.' do
    puts <<-EOV
Syndi #{Syndi::FULLVERSION}
[os: #{::RbConfig::CONFIG['host_os']}] [rb: #{::RbConfig::CONFIG['ruby_version']}] [arch: #{::RbConfig::CONFIG['arch']}]

http://syndibot.com
    EOV
    exit 0
  end
  on(:d, :directory,  "Specify the application directory. (Default: #{Syndi.dir})", :argument => true) do |dir|
    Syndi.dir = dir
  end

  command 'boot', {help: 'Start an instance of Syndi.'} do

    on(:f, :foreground, 'Disable automatic daemonizing.')
    on(:V, :verbose,    'Increase verbosity of output (more uses, the more verbose).') { $VERBOSITY += 1 }

    run do |opts, _args|
      begin
        Syndi.boot opts
      rescue => e
        Syndi.log.fatal "Fatal runtime error: #{e}\n\t#{caller.join("\n\t")}"
      end
    end
  
  end

  command 'make' do
    run do |_opts, args|
      require 'syndi/cli/make'
      Syndi::CLI::Make.start args
    end
  end

  command 'install' do
    run do |_opts, args|
      require 'syndi/cli/install'
      Syndi::CLI::Install.start args
    end
  end

end

# vim: set ts=4 sts=2 sw=2 et:
